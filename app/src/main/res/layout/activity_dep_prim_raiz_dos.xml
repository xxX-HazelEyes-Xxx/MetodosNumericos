<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dep_prim_raiz_dos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dunkellabs.metodosnumericos.primerDepartamental.DepPrimRaizDos">

    <TextView
        android:text="RaÃ­z de Dos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblRaizTitulo"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/lblInicio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/x" />

    <TextView
        android:text="Inserta Inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/lblInicio"
        android:layout_below="@+id/lblRaizTitulo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Inserta Cifras Significativas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCifrasSig"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/x"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/c"
        android:layout_below="@+id/lblCifrasSig"
        android:layout_alignLeft="@+id/x"
        android:layout_alignStart="@+id/x" />

    <Button
        android:text="Calcula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/calculaRaiz"
        android:layout_below="@+id/c"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
